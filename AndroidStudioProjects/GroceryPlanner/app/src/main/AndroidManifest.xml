<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iamchuckss.groceryplanner">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".home.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.iamchuckss.groceryplanner.library.LibraryActivity"></activity>
        <activity android:name="com.iamchuckss.groceryplanner.plan.PlanActivity"></activity>
        <activity android:name="com.iamchuckss.groceryplanner.login.SignupActivity"></activity>
        <activity android:name="com.iamchuckss.groceryplanner.login.LoginActivity"></activity>
        <activity android:name="com.iamchuckss.groceryplanner.library.AddRecipeActivity"></activity>
        <activity android:name="com.iamchuckss.groceryplanner.library.SelectIngredientsActivity"></activity>
        <activity android:name="com.iamchuckss.groceryplanner.plan.SelectRecipeActivity"></activity>
    </application>

</manifest>